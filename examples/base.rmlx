#namespace <base>

#[Description("Component")]
extend group Component;

#[Description("Entity")]
group Container {
    + unique Component(*)
    + Container(?)
    + Template(?)
}

#[Description("Main group")]
group Root(1) {
    + unique Component(*)
    + Container(?)
}

#[Description("Template")]
group Template {
    + Container(1)
}

element Layout -> Root;
element ItemTemplate -> Template;
element Test -> Template {
    target: String,
    path:   String,
}

@groups   [Component]
expression Resource {
    target: String,
    path:   String,
}

@groups   [Component]
expression Component {
    target: String,
    path:   String,
    @optional with:    Array<String>,
    @optional without: Array<String>,
}

@groups   [Component]
@restrict [Template]
expression Item {
    path: String,
    @optional converter: String,
    @optional fallback:  String,
}
