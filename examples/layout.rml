#use <schema.rmlx> //Use rmlx file

<base::Layout@Root>
    <Node width=100% height=100%/>
    <BackgroundColor self={
        base::Component
        target="Player"
        path="color"
        with=["ABC", "123", "ABC"]
        without=["ABC", "123", "ABC"]
    }/>
    <base::ItemTemplate>
        <base::Entity>
            <Node width=30px height=40px border={{
                left: 2px,
                right: 2px,
                top: 3px,
                bottom: 6px,
            }}/>
            <BackgroundColor self="#FFFFFF"/>
        </base::Entity>
    </base::ItemTemplate>
</base::Layout>

